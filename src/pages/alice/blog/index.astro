---
import BaseLayout from "../../../layouts/alice/BaseLayout.astro";
const allPosts = await Astro.glob('./posts/*.md');
---

<BaseLayout>
  <h1>Blog</h2>
  <ul>
    {
      allPosts.map(post => <li><a href={post.url}>{post.frontmatter.title}</a></li>)
    }
  </ul>
</BaseLayout>

<style>
  h1 {
    text-align: center;
  }
</style>