---
import { fade, slide } from 'astro/virtual-modules/transitions.js';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html style="overscroll-behavior-y: none;">
<html transition:animate={fade({ duration: '0.5s' })} lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="❤️‍🔥" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <link rel="preload" href="/fonts/yana/regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/yana/italic.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/yana/bold.woff2" as="font" type="font/woff2" crossorigin>
		<title>Yves Yil</title>
		<ViewTransitions />
	</head>
	<body>
        <div class="container">
            <slot />
        </div>
        <!--- Fluid background
		<canvas id="fluid"></canvas>
		<script src="../script/fluid.js"></script>
		-->
		<script>
			// Re-initialize fluid after page transitions
			document.addEventListener('astro:page-load', () => {
				setTimeout(() => {
					// Trigger a resize event to help fluid canvas re-initialize
					window.dispatchEvent(new Event('resize'));
				}, 100);
			});
		</script>
	</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
    }

	#fluid {
        margin: 0;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
	}

	body {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        overflow-y: auto;
		z-index: -100;
    }

    .container {
        text-align: left;
        font-size: 1.5rem;
        padding: 4rem 2rem;
        box-sizing: border-box;
        max-width: 1500px;
        width: 100%;
        line-height: 1.6;
        background-color: transparent;
    }

    .container h1 {
        text-align: center;
        margin-bottom: 2rem;
    }

    .container p {
        margin-bottom: 1.5rem;
    }

    .container ul, .container ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
    }

    .container li {
        margin-bottom: 0.5rem;
        color: var(--site-default);
    }

    .container code {
        background-color: rgba(255, 255, 255, 0.1);
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-family: monospace;
    }

    @media screen and (max-width: 900px) {
        .container {
            padding: 2rem;
            font-size: 1.2rem;
        }
    }
</style>
